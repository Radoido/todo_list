<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_funcionario"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateFuncionario">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Gerenciamento de funcionários"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="ID: "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNome"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Nome"/>

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCargo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Cargo"/>

            <EditText
                android:id="@+id/editCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSenha"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Senha"/>

            <EditText
                android:id="@+id/editSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Salvar" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginHorizontal="15dp"/>

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Excluir"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de funcionários"
            android:textSize="18dp"
            />


        <ListView
            android:id="@+id/listFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"/>

</LinearLayout>